<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="apps.scvh.com.thegamesdbclient">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".frontend.ui.activities.Search"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.SEARCH"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/search"/>
        </activity>
        <activity android:name=".frontend.ui.activities.Game"/>

        <receiver
            android:name=".backend.gamesdbapi.retrievers.GameRetriever"
            android:enabled="true">
            <intent-filter>
                <action android:name="api_key_changed"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".backend.gamesdbapi.retrievers.MetadataRetriever"
            android:enabled="true">
            <intent-filter>
                <action android:name="api_key_changed"/>
            </intent-filter>
        </receiver>

        <activity android:name=".frontend.ui.activities.Developer">
        </activity>
    </application>

</manifest>