<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/activity_vertical_margin"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/game_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_in_cardview"
        android:paddingEnd="@dimen/padding_in_cardview"
        app:paddingEnd="@dimen/padding_in_cardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/game_name_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover"
                android:gravity="center"
                android:layout_marginBottom="@dimen/name_margin"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/summary_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/game_name_list"
                android:layout_marginBottom="@dimen/name_margin"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>