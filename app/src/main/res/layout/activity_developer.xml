<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_developer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".frontend.ui.activities.Developer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/upper_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="apps.scvh.com.thegamesdbclient.frontend.ui.fragments.developer.UpperDeveloperFragment"/>

            </LinearLayout>
    </ScrollView>
</RelativeLayout>
